{% extends '@Forumify/admin/base.html.twig' %}
{% block title_page %}{{ 'admin.configuration.title'|trans }}{% endblock %}
{% block body %}
    <h1>{{ 'admin.configuration.title'|trans }}</h1>
    <div class="box">
        {{ form_start(form) }}
        {% embed '@Forumify/components/tabs.html.twig' %}
            {% block tabs %}
                <button type="button" class="btn-link" data-tab-id="general">{{ 'admin.configuration.general'|trans }}</button>
                <button type="button" class="btn-link" data-tab-id="users">{{ 'admin.configuration.users'|trans }}</button>
                <button type="button" class="btn-link" data-tab-id="spam-protection">{{ 'admin.configuration.spam_protection'|trans }}</button>
                {% if form.forumify__mailer__from is defined %}
                    <button type="button" class="btn-link" data-tab-id="emails">{{ 'admin.configuration.emails'|trans }}</button>
                {% endif %}
            {% endblock %}
            {% block tabpanels %}
                <div id="general">
                    {{ form_row(form.forumify__title) }}
                    {{ form_row(form.logo) }}
                    {{ form_row(form.forumify__enable_auto_updates) }}
                    {{ form_row(form.forumify__index) }}
                </div>
                <div id="users">
                    {{ form_row(form.defaultAvatar) }}
                    {{ form_row(form.forumify__login_method) }}
                    {{ form_row(form.forumify__enable_registrations) }}
                    {{ form_row(form.forumify__hide_usernames) }}
                </div>
                <div id="spam-protection">
                    {% embed '@Forumify/components/tabs.html.twig' %}
                        {% block tabs %}
                            <button type="button" class="btn-link" data-tab-id="recaptcha">
                                {{ 'admin.configuration.recaptcha_info'|trans }}
                            </button>
                            <button type="button" class="btn-link" data-tab-id="turnstile">
                                {{ 'admin.configuration.turnstile.info'|trans }}
                            </button>
                        {% endblock %}
                        {% block tabpanels %}
                            <div id ="recaptcha">
                                {{ form_row(form.forumify__recaptcha__info) }}
                                {{ form_row(form.forumify__recaptcha__enabled) }}
                                {{ form_row(form.forumify__recaptcha__site_key) }}
                                {{ form_row(form.forumify__recaptcha__site_secret) }}
                                {{ form_row(form.forumify__recaptcha__min_score) }}
                            </div>
                            <div id ="turnstile">
                                {{ form_row(form.forumify__cf_turnstile__info) }}
                                {{ form_row(form.forumify__cf_turnstile__enabled) }}
                                {{ form_row(form.forumify__cf_turnstile__site_key) }}
                                {{ form_row(form.forumify__cf_turnstile__site_secret) }}
                            </div>
                        {% endblock %}
                    {% endembed %}
                </div>
                {% if form.forumify__mailer__from is defined %}
                    <div id="emails">
                        {{ form_row(form.forumify__mailer__from) }}
                    </div>
                {% endif %}
            {% endblock %}
        {% endembed %}
        <div class="text-center mt-6">
            <button type="submit" class="btn-primary">{{ 'save'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
