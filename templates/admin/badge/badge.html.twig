{% extends '@Forumify/admin/base.html.twig' %}
{% block title_page %}
    {% if badge is not null %}
        {{ 'admin.badges.edit'|trans({ name: badge.name }) }}
    {% else %}
        {{ 'admin.badges.create'|trans }}
    {% endif %}
{% endblock %}
{% block body %}
    {% include '@Forumify/admin/components/simple_form.html.twig' with {
        title: badge is not null ? badge.name : 'admin.badges.create'|trans,
        form: form,
        cancelPath: path('forumify_admin_badge_list')
    } only %}
{% endblock %}
