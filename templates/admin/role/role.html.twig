{% extends '@Forumify/admin/base.html.twig' %}
{% block title_page %}
    {% if role is not null %}
        role {{ role.title }}
    {% else %}
        {{ 'create_role'|trans }}
    {% endif %}
{% endblock %}
{% block body %}
    {% include '@Forumify/admin/components/simple_form.html.twig' with {
        title: role is not null ? role.title : 'create_role'|trans,
        form: form,
        cancelPath: path('forumify_admin_role_list')
    } only %}
{% endblock %}
