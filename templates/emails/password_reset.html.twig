{% extends '@Forumify/emails/base.html.twig' %}
{% block body %}
    <p>Hello {{ user.username }},</p>
    <p>You are receiving this email because you requested a password reset. Please click the button below to reset your password.</p>
    <p>If you did not request a password reset, you can safely ignore this email.</p>
    {% set link = absolute_url(path('forumify_core_reset_password', { token: token })) %}
    {% include '@Forumify/emails/components/button.html.twig' with {
        href: link,
        label: 'Reset Password'
    } only %}
    <p>Or by using this link:</p>
    {{ link }}
{% endblock %}
