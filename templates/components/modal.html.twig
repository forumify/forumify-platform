<div style="display: inline-block" {{ stimulus_controller('forumify/modal') }}>
    {% block modalOpenButton %}
    {% endblock %}
    {% block modal %}
        <div class="modal" {{ stimulus_target('forumify/modal', 'modal') }}>
            {% block modalBody %}
                <div class="modal-body" {{ stimulus_target('forumify/modal', 'modalBody') }}>
                    {% block modalCloseButton %}
                        <button type="button" class="btn-link btn-small btn-icon" {{ stimulus_action('forumify/modal', 'close') }}>
                            <i class="ph ph-x"></i>
                        </button>
                    {% endblock %}
                    {% block modalContent %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
</div>
