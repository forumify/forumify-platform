<div {{ stimulus_controller('forumify/forumify-platform/menu', {
    placement: placement|default('bottom-end'),
    hideAdornment: hideAdornment|default(false),
}) }}>
    {% block open_button %}
        <a class='{{ buttonClass|default('btn-link') }}' {{ stimulus_target('forumify/forumify-platform/menu', 'openButton') }}>
            {% block button_text %}{% endblock %}
        </a>
    {% endblock %}
    {% block menu %}
        <div class='menu' {{ stimulus_target('forumify/forumify-platform/menu', 'menu') }}>
            {% block menu_items %}{% endblock %}
        </div>
    {% endblock %}
</div>
