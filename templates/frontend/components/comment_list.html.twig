{% embed '@Forumify/components/list.html.twig' with { class: '' } %}
    {% block list %}
        <ul class="flex flex-col gap-4">
            {% for item in this.result.rows %}
                {% block row %}
                    {% include '@Forumify/frontend/components/comment_list_comment.html.twig' %}
                {% endblock %}
            {% else %}
                {% block empty %}
                {% endblock %}
            {% endfor %}
        </ul>
    {% endblock %}
    {% block pagination_top %}
        {% include '@Forumify/components/components/pagination.html.twig' with { class: 'box p-2 mb-4' } %}
    {% endblock %}
    {% block pagination_bottom %}
        {% include '@Forumify/components/components/pagination.html.twig' with { class: 'box p-2 mt-4' } %}
    {% endblock %}
{% endembed %}
