<div class="box rounded p-0">
    {% if event.banner is not null %}
        <img
            class="rounded"
            src="{{ asset(event.banner, 'forumify.asset') }}"
            style="width: 100%; height: auto; border-bottom-left-radius: 0; border-bottom-right-radius: 0;"
        >
    {% endif %}
    <div class="flex justify-between p-4">
        <div>
            <p class="text-huge text-bold mb-2">
                <i style="background-color: {{ event.calendar.color }}; display: inline-block; width: 16px; height: 16px; border-radius: 8px"></i>
                {{ event.title }}
            </p>
            <p>
                {{ event.start|format_date(true) }}
                {% if event.end is not null %}
                    {{ 'calendar.event.until'|trans }}
                    {% if event.end|date('Ymd') == event.start|date('Ymd') %}
                        {{ event.end|date('g:i A') }}
                    {% else %}
                        {{ event.end|format_date(true) }}
                    {%endif %}
                {% endif %}
            </p>
        </div>
        <div class="flex justify-end gap-1">
            {% if can('manage_events', event.calendar) %}
                <a class="btn-link btn-icon" href="{{ path('forumify_calendar_event_edit', { slug: event.slug }) }}">
                    <i class="ph ph-pencil-simple"></i>
                </a>
                <a class="btn-link btn-icon" href="{{ path('forumify_calendar_event_delete', { slug: event.slug }) }}">
                    <i class="ph ph-trash"></i>
                </a>
            {% endif %}
            <a class="btn-link btn-icon" {{ stimulus_action('forumify/modal', 'close') }}>
                <i class="ph ph-x"></i>
            </a>
        </div>
    </div>
    {% if event.content|striptags(['img']) is not empty %}
        <div class="pl-4 pr-4 pb-2">
            {{ event.content|rich }}
        </div>
    {% endif %}
</div>
