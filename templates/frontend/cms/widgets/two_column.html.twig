{% import '@Forumify/frontend/cms/macros.html.twig' as cms %}
{% set isResponsive = widget.settings.responsive|default(false) %}
{% set colClass = isResponsive ? 'col-xs-2 col-md-1' : 'col-1' %}
<div class="grid-2">
    <div class="{{ colClass }}">
        {{ cms.slot(widget.slots[0]) }}
    </div>
    <div class="{{ colClass }}">
        {{ cms.slot(widget.slots[1]) }}
    </div>
</div>
